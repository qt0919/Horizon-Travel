{% extends 'base2.html' %}

{% block content %}
<title>Flight Ticket</title>
	<!-- Bootstrap CSS 
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">-->

</head>
<body>
<h1 style='color:green;'>Welcome {{ username }}!</h1>        
Here you can perform authorised operations <br/>
data: {{data}} <br/>    
<div class="container-fluid" style="background-image:url(/static/background1.webp); background-size: cover; padding: 50px;">
  <div  class="d-flex flex-row justify-content-center mb-3" >
    <ul class="nav nav-pills mb-3 bg-light p-3 rounded-4" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Flight</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Bus</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Train</button>
      </li>
    </ul>
  </div>
  <div class="row justify-content-center text-center" style="width:100%;">
    <div class="col-lg-5 col-12 mx-auto bg-white p-3 rounded-3" >
      <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
          <div class="card card-header bg-light " >
            <h4>Book Here !!!</h4>
          </div>
          <div class="card-body bg-light">
            <form action="/selectBooking" class="mt-5" method="POST">
              <div class="form-group">
                <label for="departure">Departure City:</label>
                <select name="departureslist" onchange="getarrivalcity(this.value)" class="form-control">
                {% for departure in departurelist %}
                    <option value="{{departure}}"> {{departure}} </option>	    
                {% endfor %} 
                </select>
              </div>
              <div class="form-group">
                <label for="destination">Destination City:</label>
                <select id="arrivalslist" name="arrivalslist" class="form-control">            
                {% for departure in departurelist %}
                  <option value="{{departure}}"> {{departure}} </option>	    
                {% endfor %} 
                </select>
              </div>
              <div class="form-group">
                <label for="date">Departure Date:</label>
                <input type="date" class="form-control" name="date" id="date">
              </div>
              <div class="form-group">
                <label for="date">Departure Date:</label>
                <input type="date" class="form-control" name="returndate" id="returndate">
              </div>
              <!--
              <div class="form-group">
                <label for="departure_time">Departure Time:</label>
                <input type="time" class="form-control" name="departure_time" id="departure_time" value="{{ departure_time }}">
              </div>
              <div class="form-group">
                <label for="arrival_time">Arrival Time:</label>
                <input type="time" class="form-control" name="arrival_time" id="arrival_time" value="{{ arrival_time }}">
              </div>
              -->
              <div class="form-group">
                <label for="class">Class:</label>
                <select class="form-control" id="class">
                  <option>Economy</option>
                  <option>Business</option>
                  <option>First Class</option>
                </select>
              </div>
              <div class="form-group">
                <label for="nooftickets">Number of Tickets:</label>
                <input type="number" class="form-control" name="nooftickets" id="nooftickets">
              </div>
              <br>
              <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
          </div>
        </div>
        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
          <div class="card card-header bg-light " >
            <h4>Book Here !!!</h4>
          </div>
          <div class="card-body">
            <form action="" class="mt-5">
              <div class="form-group">
                <label for="departure">Departure City:</label>
                <input type="text" class="form-control" id="departure">
              </div>
              <div class="form-group">
                <label for="destination">Destination City:</label>
                <input type="text" class="form-control" id="destination">
              </div>
              <div class="form-group">
                <label for="date">Departure Date:</label>
                <input type="date" class="form-control" id="date">
              </div>
              <div class="form-group">
                <label for="departure-time">Departure Time:</label>
                <input type="time" class="form-control" id="departure-time">
              </div>
              <div class="form-group">
                <label for="arrival-time">Arrival Time:</label>
                <input type="time" class="form-control" id="arrival-time">
              </div>
              <div class="form-group">
                <label for="number-of-tickets">Number of Tickets:</label>
                <input type="number" class="form-control" id="number-of-tickets">
              </div>
              <br>
              <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
          </div>
        </div>
        <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
          <div class="card card-header bg-light " >
            <h4>Book Here !!!</h4>
          </div>
          <div class="card-body">
            <form action="" class="mt-5">
              <div class="form-group">
                <label for="departure">Departure City:</label>
                <input type="text" class="form-control" id="departure">
              </div>
              <div class="form-group">
                <label for="destination">Destination City:</label>
                <input type="text" class="form-control" id="destination">
              </div>
              <div class="form-group">
                <label for="date">Departure Date:</label>
                <input type="date" class="form-control" id="date">
              </div>
              <div class="form-group">
                <label for="departure-time">Departure Time:</label>
                <input type="time" class="form-control" id="departure-time">
              </div>
              <div class="form-group">
                <label for="arrival-time">Arrival Time:</label>
                <input type="time" class="form-control" id="arrival-time">
              </div>
              <div class="form-group">
                <label for="class">Class:</label>
                <select class="form-control" id="class">
                  <option>Economy</option>
                  <option>Business</option>
                  <option>First Class</option>
                </select>
              </div>
              <div class="form-group">
                <label for="number-of-tickets">Number of Tickets:</label>
                <input type="number" class="form-control" id="number-of-tickets">
              </div>
              <br>
              <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>  
  </div>
</div>
